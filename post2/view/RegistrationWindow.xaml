<Window x:Class="post2.view.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:post2.view"
        mc:Ignorable="d"
          DataContext="{Binding HomeViewModelLocator, Source={StaticResource Locator}}"
        Height="600" Width="1024" [B]MouseLeftButtonDown="Window_MouseLeftButtonDown" [/B]>
     
    <Grid>
        <Button x:Name="ButtonOpenMenu"  Width="35" Height="35"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5"  Command="{Binding OpenMenuCommand }"  >
            <Button.Resources>
                <multi:MultiValueConverter x:Key="MultiValue"/>
            </Button.Resources>
            <Button.CommandParameter>
                <MultiBinding Converter="{StaticResource MultiValue}">
                    <MultiBinding.Bindings>
                        <Binding ElementName="ButtonOpenMenu"/>
                        <Binding ElementName="ButtonCloseMenu"/>
                    </MultiBinding.Bindings>
                </MultiBinding>
            </Button.CommandParameter>
        </Button>
    </Grid>
</Window>
